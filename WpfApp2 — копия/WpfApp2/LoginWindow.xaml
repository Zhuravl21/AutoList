<Window x:Class="WpfApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Username:" Margin="10"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <TextBlock Text="Password:" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Margin="10"/>
            <Button Content="Login" Width="100" Margin="10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
